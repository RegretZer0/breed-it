<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>BreedIT | System Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      color: #333;
    }

    header {
      background: #1e293b;
      color: #fff;
      padding: 15px 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      margin: 0;
      font-size: 20px;
    }

    header button {
      background: #ef4444;
      border: none;
      color: white;
      padding: 8px 14px;
      cursor: pointer;
      border-radius: 4px;
    }

    .container {
      display: flex;
      min-height: calc(100vh - 60px);
    }

    nav {
      width: 240px;
      background: #111827;
      color: white;
      padding-top: 20px;
    }

    nav a {
      display: block;
      padding: 14px 20px;
      color: #d1d5db;
      text-decoration: none;
    }

    nav a:hover {
      background: #1f2937;
      color: white;
    }

    main {
      flex: 1;
      padding: 25px;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .card {
      background: white;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .card h2 {
      margin: 0;
      font-size: 14px;
      color: #6b7280;
    }

    .card p {
      font-size: 28px;
      margin-top: 10px;
      font-weight: bold;
    }

    input[type="text"] {
      padding: 8px 12px;
      width: 300px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 40px;
    }

    th, td {
      padding: 12px 15px;
      border-bottom: 1px solid #ddd;
      text-align: left;
      font-size: 14px;
    }

    th {
      background: #1e293b;
      color: white;
    }

    footer {
      margin-top: 30px;
      text-align: center;
      font-size: 13px;
      color: #6b7280;
    }
  </style>
</head>

<body>

<header>
  <h1>BreedIT ‚Äì System Admin Dashboard</h1>
  <button id="logoutBtn">Logout</button>
</header>

<div class="container">

  <nav>
    <a href="#">üìä Dashboard</a>
    <a href="#user-control">üë§ User Control</a>
    <a href="#data-oversight">üìÅ Data Oversight</a>
  </nav>

  <main>

    <!-- SYSTEM OVERVIEW -->
    <h2>System Overview</h2>
    <div class="cards">
      <div class="card">
        <h2>Farm Managers</h2>
        <p id="farmManagers">--</p>
      </div>
      <div class="card">
        <h2>Farmers</h2>
        <p id="farmers">--</p>
      </div>
      <div class="card">
        <h2>Total Swine</h2>
        <p id="swine">--</p>
      </div>
      <div class="card">
        <h2>Heat Reports</h2>
        <p id="heatReports">--</p>
      </div>
      <div class="card">
        <h2>Breeding Records</h2>
        <p id="breeding">--</p>
      </div>
    </div>

    <!-- USER & ACCESS CONTROL -->
    <section id="user-control">
      <h2>All Users</h2>
      <input type="text" id="searchUser" placeholder="Search by name or email..." />
      <table id="usersTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </section>

    <!-- DATA OVERSIGHT -->
    <section id="data-oversight">
      <h2>Data Oversight</h2>

      <!-- FARM MANAGERS -->
      <h3>Farm Managers</h3>
      <table id="farmManagersTable">
        <thead>
          <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <!-- FARMERS -->
      <h3>Farmers</h3>
      <table id="farmersTable">
        <thead>
          <tr>
            <th>Farmer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Pens</th>
            <th>Capacity</th>
            <th>Registered By</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <!-- SWINE -->
      <h3>Swine</h3>
      <table id="swineTable">
        <thead>
          <tr>
            <th>Swine ID</th>
            <th>Color</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Batch</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <!-- HEAT REPORTS -->
      <h3>Heat Reports</h3>
      <table id="heatReportsTable">
        <thead>
          <tr>
            <th>Report ID</th>
            <th>Swine ID</th>
            <th>Date</th>
            <th>Signs</th>
            <th>Probability</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <!-- BREEDING RECORDS -->
      <h3>Breeding Records</h3>
      <table id="breedingRecordsTable">
        <thead>
          <tr>
            <th>Record ID</th>
            <th>Swine ID</th>
            <th>Date</th>
            <th>Type</th>
            <th>Piglets</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

    </section>

    <footer>
      ¬© 2026 BreedIT System | System Administrator
    </footer>

  </main>
</div>

<script src="../../../js/system-admin/dashboard.js"></script>
</body>
</html>