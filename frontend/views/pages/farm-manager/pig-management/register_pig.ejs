<%- include("../../../partials/farm-manager/header") %>
<%- include("../../../partials/farm-manager/navbar") %>
<%- include("../../../partials/farm-manager/sidepanel") %>

<main class="main-content">
  <div class="container-fluid">

    <!-- Header card with tabs -->
    <%- include("../../../partials/farm-manager/pigmanagement_panel") %>

    <div class="card pig-card">
      <div class="card-body">

        <h4 class="mb-4 fw-bold">REGISTER A PIG</h4>

        <form id="registerSwineForm">

          <!-- FARMER -->
          <h6 class="section-title">Farmer Information</h6>
          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <label class="form-label">Farmer</label>
              <!-- MUST be a select (linked to farmer_id) -->
                <select id="farmerSelect" class="form-select" required>
                  <option value="">Select Farmer</option>
                </select>
            </div>
          </div>

          <!-- PIG IDENTIFICATION -->
          <h6 class="section-title">Pig Identification</h6>
          <div class="row g-3 mb-4">

          <div class="col-md-3">
            <label class="form-label">TAG (Swine ID)</label>
            <input
              type="text"
              class="form-control"
              id="swine_id"
              readonly
            />
          </div>

          <div class="col-md-3">
            <label class="form-label">Batch</label>
            <input
              type="text"
              class="form-control"
              id="batch"
              placeholder="e.g. A"
              required
            />
          </div>


            <div class="col-md-3">
              <label class="form-label">Breed</label>
              <select class="form-select" id="breed">
                <option value="" disabled selected>Select Breed</option>
                <option>Native</option>
                <option>Large White</option>
                <option>Landrace</option>
                <option>Duroc</option>
                <option>Pietrain</option>
                <option>Berkshire</option>
                <option>Crossbred</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Sex</label>
              <select class="form-select" id="sex" required>
                <option value="" disabled selected>Select Sex</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Color</label>
              <select class="form-select" id="color">
                <option value="" disabled selected>Select Color</option>
                <option>Black</option>
                <option>White</option>
                <option>Pink</option>
                <option>Brown</option>
                <option>Red</option>
                <option>Mixed</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Birth Date</label>
              <input type="date" class="form-control" id="birth_date" />
            </div>

          </div>

          <!-- LINEAGE & STATUS -->
          <h6 class="section-title">Lineage & Status</h6>
          <div class="row g-3 mb-4">

            <div class="col-md-3">
              <label class="form-label">Sire ID</label>
              <input type="text" class="form-control" id="sire_id" />
            </div>

            <div class="col-md-3">
              <label class="form-label">Dam ID</label>
              <input type="text" class="form-control" id="dam_id" />
            </div>

            <div class="col-md-3">
              <label class="form-label">Health Status</label>
              <select class="form-select" id="status">
                <option>Healthy</option>
                <option>Sick</option>
                <option>Deceased</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Inventory Status</label>
              <select class="form-select" id="inventory_status">
                <option>In Stock</option>
                <option>Sold</option>
                <option>Transferred</option>
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Date of Transfer</label>
              <input type="date" class="form-control" id="date_transfer" />
            </div>

          </div>

          <p id="swineMessage" class="small"></p>

          <!-- ACTIONS -->
          <div class="d-flex justify-content-end gap-3">
            <button type="reset" class="btn btn-clear px-4">CLEAR</button>
            <button type="submit" class="btn btn-save px-4">SAVE</button>
          </div>

        </form>

      </div>
    </div>
  </div>
</main>

<%- include("../../../partials/farm-manager/footer") %>
