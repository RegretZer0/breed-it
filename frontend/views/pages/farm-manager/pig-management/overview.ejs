<%- include("../../../partials/farm-manager/header") %>
<%- include("../../../partials/farm-manager/navbar") %>
<%- include("../../../partials/farm-manager/sidepanel") %>

<main class="main-content">
  <div class="container-fluid">

    <%- include("../../../partials/farm-manager/pigmanagement_panel") %>

    <div class="card page-card mb-3"></div>

    <div class="card page-card mb-4">
      <div class="card-body">
        <form id="filtersForm" class="row g-2 align-items-end">

          <div class="col-md-4 position-relative">
            <label class="form-label small">Farmer</label>
            <div class="dropdown w-100">
              <button class="form-select form-select-sm text-start"
                type="button" id="farmerDropdownBtn"
                data-bs-toggle="dropdown">
                Select Farmer
              </button>
              <div class="dropdown-menu w-100 p-2"
                style="max-height:260px;overflow-y:auto;">
                <input id="farmerSearch"
                  class="form-control form-control-sm mb-2"
                  placeholder="Search farmer...">
                <div id="farmerOptions">
                  <div class="text-muted small">Loading farmers...</div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-2">
            <label class="form-label small">Pig Status</label>
            <select id="filterStatus" class="form-select form-select-sm">
              <option value="">All</option>
              <option value="Healthy">Healthy</option>
              <option value="Market-Ready">Market-Ready</option>
              <option value="Pregnant">Pregnant</option>
              <option value="In-Heat">In-Heat</option>
            </select>
          </div>

          <div class="col-md-2">
            <label class="form-label small">Sex</label>
            <select id="filterSex" class="form-select form-select-sm">
              <option value="">All</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </div>

          <div class="col-md-2">
            <label class="form-label small">Type</label>
            <select id="filterType" class="form-select form-select-sm">
              <option value="">All</option>
              <option value="piglet">Piglets</option>
              <option value="sow">Sows</option>
              <option value="boar">Boars</option>
              <option value="master">Master / Maintenance Boars</option>
            </select>
          </div>

          <div class="col-md-3">
            <label class="form-label small">Tag Number</label>
            <input id="filterTag"
              class="form-control form-control-sm"
              placeholder="Search by tag">
          </div>

          <div class="col-md-1 d-grid">
            <button type="submit" class="btn btn-sm btn-success">Search</button>
          </div>
          <div class="col-md-1 d-grid">
            <button type="button"
              id="resetFilters"
              class="btn btn-sm btn-outline-secondary">
              Reset
            </button>
          </div>
        </form>
      </div>
    </div>

  <!-- ================= FILTERED RESULT ================= -->
  <div class="mt-3 d-none" id="filterResultWrap">
    <h6 class="mb-2 text-muted">Filtered Result</h6>

    <div class="table-responsive">
      <table class="table table-sm table-bordered mb-0">
        <thead>
          <tr>
            <th>Tag</th>
            <th>Farmer</th>
            <th>Status</th>
            <th>Batch</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="filterResultBody"></tbody>
      </table>
    </div>

    <!-- ✅ FILTER PREVIEW PAGINATION -->
    <div
      class="d-flex justify-content-between align-items-center mt-2"
      id="filterPreviewPagination">

      <button
        id="filterPreviewPrev"
        class="btn btn-sm btn-outline-secondary">
        Prev
      </button>

      <span
        id="filterPreviewIndicator"
        class="small fw-semibold text-muted">
      </span>

      <button
        id="filterPreviewNext"
        class="btn btn-sm btn-outline-secondary">
        Next
      </button>
    </div>
  </div>

  <!-- ================= SWINE TABLE ================= -->
  <div class="card page-card">
    <div class="card-body">
      <h5 class="mb-3">Swine Inventory List</h5>

      <div class="table-responsive">
        <table
          class="table table-sm table-bordered align-middle"
          id="swineTable">

          <thead class="table-light">
            <tr>
              <th>ID / Batch</th>
              <th>Owner</th>
              <th>Breed & Age</th>
              <th>Status / Health</th>
              <th>Sire / Dam</th>
              <th>Repro Summary</th>
              <th>Latest Perf</th>
            </tr>
          </thead>

          <tbody id="swineTableBody">
            <tr>
              <td colspan="7" class="text-center text-muted">
                Loading swine records...
              </td>
            </tr>
          </tbody>

        </table>
      </div>

      <!-- ✅ SWINE TABLE PAGINATION (SINGLE SOURCE OF TRUTH) -->
      <div class="d-flex justify-content-between align-items-center mt-2">
        <button
          id="swinePrevBtn"
          class="btn btn-sm btn-outline-secondary">
          Prev
        </button>

        <span
          id="swinePageIndicator"
          class="small fw-semibold text-muted">
        </span>

        <button
          id="swineNextBtn"
          class="btn btn-sm btn-outline-secondary">
          Next
        </button>
      </div>
    </div>
  </div>


    <!-- ================= SWINE MODAL ================= -->
    <div class="modal fade" id="swineModal" tabindex="-1">
      <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title" id="modalSwineId">Swine History Card</h5>
            <button class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body">

            <div id="reproSummarySection" class="mb-4" style="display:none;">
              <h6>Lifetime Reproductive Summary</h6>
              <div class="row text-center border rounded p-3 bg-light mx-0">
                <div class="col">
                  <label class="small text-muted d-block">Total Cycles</label>
                  <div id="statCycles" class="fw-bold fs-5">0</div>
                </div>
                <div class="col">
                  <label class="small text-muted d-block">Total Piglets Born</label>
                  <div id="statTotalBorn" class="fw-bold fs-5">0</div>
                </div>
                <div class="col">
                  <label class="small text-muted d-block">Avg. Litter Size</label>
                  <div id="statAvgLitter" class="fw-bold fs-5">0</div>
                </div>
                <div class="col">
                  <label class="small text-muted d-block">Total Live</label>
                  <div id="statTotalLive" class="fw-bold fs-5">0</div>
                </div>
              </div>
            </div>

            <div id="offspringSection" class="mb-4" style="display:none;">
                <h6>Offspring Inventory (Direct Descendants)</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Tag ID</th>
                                <th>Sex</th>
                                <th>Stage</th>
                                <th>Current Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="offspringListBody"></tbody>
                    </table>
                </div>
            </div>

            <h6>Breeding & Farrowing History</h6>
            <div class="table-responsive mb-4">
              <table class="table table-sm table-bordered" id="repoTable">
                <thead class="table-light">
                  <tr>
                    <th>Cycle</th>
                    <th>Service Date</th>
                    <th>Farrowing Date</th>
                    <th>Total Born</th>
                    <th>Live / Dead</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody id="reproductiveHistoryBody"></tbody>
              </table>
            </div>

            <h6>Growth & Performance Timeline</h6>
            <div class="table-responsive">
              <table class="table table-sm table-bordered" id="perfTable">
                <thead class="table-light">
                  <tr>
                    <th>Date</th>
                    <th>Weight</th>
                    <th>L x G</th>
                    <th>Stage</th>
                    <th>Remarks</th>
                  </tr>
                </thead>
                <tbody id="performanceTimelineBody"></tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editPerformanceModal" tabindex="-1">
      <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Swine Performance</h5>
            <button class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="editPerformanceForm">
              <input type="hidden" id="editSwineId">
              <div class="mb-3">
                <label class="form-label">Weight (kg)</label>
                <input type="number" step="0.1" class="form-control" id="editWeight" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Body Length (cm)</label>
                <input type="number" step="0.1" class="form-control" id="editBodyLength" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Heart Girth (cm)</label>
                <input type="number" step="0.1" class="form-control" id="editHeartGirth" required>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" id="savePerformanceBtn">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>

<%- include("../../../partials/farm-manager/footer") %>