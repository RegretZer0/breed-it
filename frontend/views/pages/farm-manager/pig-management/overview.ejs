<%- include("../../../partials/farm-manager/header") %>
<%- include("../../../partials/farm-manager/navbar") %>
<%- include("../../../partials/farm-manager/sidepanel") %>

<!-- Main content -->
<main class="main-content">
  <div class="container-fluid">

    <!-- Header card with tabs -->
    <%- include("../../../partials/farm-manager/pigmanagement_panel") %>

    <!-- Filters row -->
    <div class="card page-card mb-3">
      <div class="card-body">
        <form id="filtersForm" class="row g-2 align-items-center">

          <div class="col-auto col-md">
            <select class="form-select form-select-sm">
              <option>Location</option>
            </select>
          </div>

          <div class="col-auto col-md">
            <select class="form-select form-select-sm">
              <option>Pig Status</option>
            </select>
          </div>

          <div class="col-auto col-md">
            <select class="form-select form-select-sm">
              <option>Sex</option>
            </select>
          </div>

          <div class="col-auto col-md">
            <select class="form-select form-select-sm">
              <option>Phase</option>
            </select>
          </div>

          <div class="col-auto col-md">
            <select class="form-select form-select-sm">
              <option>Type of Pig</option>
            </select>
          </div>

          <div class="col-auto col-md">
            <input type="date" class="form-control form-control-sm" />
          </div>

          <div class="col-auto text-center">— TO —</div>

          <div class="col-auto col-md">
            <input type="date" class="form-control form-control-sm"/>
          </div>

          <div class="col-auto col-md">
            <input
              type="text"
              class="form-control form-control-sm"
              placeholder="Search by tag number"
            />
          </div>

          <div class="col-auto">
            <button class="btn btn-success btn-sm search-btn">
              Search
            </button>
          </div>

        </form>
      </div>
    </div>

    <!-- Table card -->
    <div class="card page-card">
      <div class="card-body p-0">
        <div class="table-responsive custom-table-wrap">
          <table class="table table-borderless mb-0">

            <!-- UPDATED TABLE HEADERS -->
            <thead class="table-head">
              <tr>
                <th>YEAR</th>
                <th>TAG (ID)</th>
                <th>SEX</th>
                <th>COLOR</th>
                <th>BREED</th>
                <th>BIRTH DATE</th>
                <th>AGE</th>
                <th>STATUS</th>
                <th>BATCH</th>
                <th>ACTION</th>
              </tr>
            </thead>

            <!-- UPDATED TABLE BODY -->
            <tbody id="swineTableBody">
              <tr>
                <td colspan="10" class="text-center text-muted">
                  Loading swine records...
                </td>
              </tr>
            </tbody>

          </table>
        </div>
      </div>
    </div>

  </div>
</main>

<%- include("../../../partials/farm-manager/footer") %>