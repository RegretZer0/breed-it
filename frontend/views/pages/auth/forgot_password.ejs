<%- include("../../partials/landing_header") %>

<main class="login-viewport">
  <div class="container-lg h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-8">
        <div class="login-card p-4">

          <!-- Title -->
          <h2 class="login-title text-center">Reset Password</h2>

          <!-- STEP 1: REQUEST OTP -->
          <form class="mt-4" id="forgotForm">
            <div class="mb-3">
              <label class="form-label small text-muted">Email</label>
              <input
                type="email"
                class="form-control form-control-sm"
                id="fpEmail"
                required
              >
            </div>

            <div class="d-grid mb-2">
              <button
                type="submit"
                class="btn btn-outline-dark btn-sm login-btn"
              >
                Send OTP
              </button>
            </div>
          </form>

          <!-- STEP 2: RESET PASSWORD -->
          <form class="mt-4 d-none" id="resetForm">
            <div class="mb-3">
              <label class="form-label small text-muted">OTP</label>
              <input
                type="text"
                class="form-control form-control-sm otp-input"
                id="otp"
                required
              >
            </div>

            <div class="mb-3">
              <label class="form-label small text-muted">New Password</label>
              <input
                type="password"
                class="form-control form-control-sm"
                id="newPassword"
                required
              >
            </div>

            <div class="d-grid mb-2">
              <button
                type="submit"
                class="btn btn-outline-dark btn-sm login-btn"
              >
                Reset Password
              </button>
            </div>
          </form>

          <!-- MESSAGE -->
          <p id="fpMessage" class="text-center small mb-2"></p>

          <!-- BACK TO LOGIN -->
          <div class="text-center mt-3">
            <a href="/login" class="forgot-link">Back to Login</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</main>

<script src="/js/auth/forgot_password.js"></script>
</body>
</html>
