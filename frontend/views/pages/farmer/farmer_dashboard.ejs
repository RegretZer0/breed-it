<%- include("../../partials/farmer/farmer_nav") %>

<div class="app-root">
<!-- MAIN CONTENT -->
<main class="dashboard-container">

  <!-- GREETING (MOVED HERE) -->
  <div class="dashboard-greeting">
    <h2>Hello, <%= user?.first_name || "Farmer" %></h2>
    <p id="phDateTime">Loading date and time...</p>
  </div>

  <h3 class="dashboard-title" data-i18n="dashboard">DASHBOARD</h3>

  <div class="dashboard-grid">

    <!-- MY PIGS -->
    <a href="/farmer/mypigs" class="dashboard-card">
      <div class="icon-circle green">
        <i class="fa-solid fa-piggy-bank"></i>
      </div>
      <span data-i18n="my_pigs">MY PIGS</span>
    </a>

    <!-- REPORT -->
    <a href="/farmer/report" class="dashboard-card">
      <div class="icon-circle blue">
        <i class="fa-solid fa-file-pen"></i>
      </div>
      <span data-i18n="report">REPORT</span>
    </a>

    <!-- YOUR SCHEDULE -->
    <a href="/farmer/calendar" class="dashboard-card">
      <div class="icon-circle teal">
        <i class="fa-solid fa-calendar-check"></i>
      </div>
      <span class="card-title">YOUR SCHEDULE</span>
      <small class="card-subtitle">Heat checks &amp; farrowing</small>
    </a>

    <!-- REPRODUCTION & GROWTH -->
    <a href="/farmer/reproduction" class="dashboard-card">
      <div class="icon-circle red">
        <i class="fa-solid fa-chart-line"></i>
      </div>
      <span class="card-title">REPRODUCTION MONITORING</span>
    </a>

    <!-- BREEDING ANALYTICS -->
    <a href="/farmer/breeding-analytics" class="dashboard-card">
      <div class="icon-circle yellow">
        <i class="fa-solid fa-dna"></i>
      </div>
      <span class="card-title">BREEDING ANALYTICS</span>
    </a>

    <!-- PROFILE -->
    <a href="/farmer/profile" class="dashboard-card">
      <div class="icon-circle orange">
        <i class="fa-solid fa-user"></i>
      </div>
      <span data-i18n="profile">PROFILE</span>
    </a>

    <!-- HELP -->
    <a href="/farmer/help" class="dashboard-card">
      <div class="icon-circle purple">
        <i class="fa-solid fa-question"></i>
      </div>
      <span data-i18n="help">HELP</span>
    </a>

  </div>

</main>
</div>
<%- include("../../partials/farmer/farmer_footer") %>
