<!-- =======================
     AUDIT LOGS MODULE
======================= -->

<!-- RIGHT: Audit Logs (COLUMN ONLY) -->
<div class="col-lg-4 d-flex">
  <div class="card page-card h-100 w-100">
    <div class="card-body d-flex flex-column">

      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="card-title mb-0">Recent Audit Logs</h5>
        <button id="openAuditLogs" class="btn btn-outline-primary btn-sm">
          View Audits
        </button>
      </div>

      <!-- DASHBOARD TABLE (5 ROWS) -->
      <div class="table-responsive flex-grow-1">
        <table class="table table-sm table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Date</th>
              <th>User</th>
              <th>Role</th>
              <th>Action</th>
              <th>Module</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody id="dashboardAuditBody">
            <tr>
              <td colspan="6" class="text-center text-muted">
                Loading activity…
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<!-- =======================
     AUDIT LOGS MODAL
======================= -->
<div class="modal fade" id="auditLogsModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-xl modal-fullscreen-sm-down">
    <div class="modal-content audit-modal">

      <div class="modal-header">
        <h5 class="modal-title">System Audit Logs</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

        <!-- FILTERS -->
        <div class="row g-2 mb-3 align-items-end">
          <div class="col-md-5">
            <label class="form-label small">Search User</label>
            <input
              id="auditSearch"
              class="form-control form-control-sm"
              placeholder="Name or email"
            >
          </div>

          <div class="col-md-3">
            <label class="form-label small">From</label>
            <input
              id="auditDateFrom"
              type="date"
              class="form-control form-control-sm"
            >
          </div>

          <div class="col-md-3">
            <label class="form-label small">To</label>
            <input
              id="auditDateTo"
              type="date"
              class="form-control form-control-sm"
            >
          </div>

          <div class="col-md-1 d-flex gap-1">
            <button
              id="auditApplyBtn"
              class="btn btn-sm btn-primary w-100"
            >
              Apply
            </button>
            <button
              id="auditResetBtn"
              class="btn btn-sm btn-outline-secondary w-100"
            >
              Reset
            </button>
          </div>
        </div>

        <!-- FILTERED RESULTS (5 ROWS) -->
        <h6 class="small text-muted">Filtered Results</h6>
        <div class="audit-table-wrapper mb-3">
          <table class="table table-sm table-hover audit-table">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>User</th>
                <th>Role</th>
                <th>Action</th>
                <th>Module</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody id="auditFilteredTableBody">
              <tr>
                <td colspan="6" class="text-center text-muted">
                  No filters applied.
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- ALL LOGS (PAGINATED 10 ROWS) -->
        <h6 class="small text-muted">All Audit Logs</h6>
        <div class="audit-table-wrapper">
          <table class="table table-sm table-hover audit-table">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>User</th>
                <th>Role</th>
                <th>Action</th>
                <th>Module</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody id="auditModalTableBody">
              <tr>
                <td colspan="6" class="text-center text-muted">
                  Loading audit logs…
                </td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>

      <div class="modal-footer d-flex justify-content-between">
        <div class="d-flex gap-2">
          <button
            id="auditPrevBtn"
            class="btn btn-sm btn-outline-secondary"
          >
            Prev
          </button>
          <button
            id="auditNextBtn"
            class="btn btn-sm btn-outline-secondary"
          >
            Next
          </button>
        </div>

        <button
          class="btn btn-secondary btn-sm"
          data-bs-dismiss="modal"
        >
          Close
        </button>
      </div>

    </div>
  </div>
</div>
