<!-- Sidebar -->
<aside class="sidebar d-flex flex-column" id="sidebar">

  <!-- Close icon inside sidebar -->
  <div class="sidebar-close-wrap d-lg-none">
    <button
      id="sidebarCloseBtn"
      class="sidebar-close-btn"
      aria-label="Close sidebar"
    >
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>

  <nav class="nav flex-column w-100 px-2">

      <!-- DASHBOARD -->
      <a
        href="/farm-manager/dashboard"
        class="nav-link <%= current_page === 'dashboard' ? 'active' : '' %>"
      >
        <i class="fa-solid fa-border-all me-2"></i>
        Dashboard
      </a>

      <!-- PIG MANAGEMENT -->
      <a
        href="/farm-manager/pig-management"
        class="nav-link <%= current_section === 'pig_management' ? 'active' : '' %>"
      >
        <i class="fa-solid fa-piggy-bank me-2"></i>
        Swine Management
      </a>

      <!-- REPORTS -->
      <a
        href="/farm-manager/reports"
        class="nav-link <%= current_page === 'reports' ? 'active' : '' %>"
      >
        <i class="fa-solid fa-clipboard-check me-2"></i>
        Heat Reports Verification
      </a>


      <!-- REPRODUCTION MONITORING -->
      <a
        href="/farm-manager/reproduction-monitoring"
        class="nav-link <%= current_page === 'reproduction_monitoring' ? 'active' : '' %>"
      >
        <i class="fa-solid fa-venus-mars me-2"></i>
        Reproduction Monitoring
      </a>

      <!-- SWINE ANALYSIS -->
      <a
        href="/farm-manager/breed-quality-analytics/swine-analysis"
        class="nav-link <%= current_page === 'swine_analysis' ? 'active' : '' %>"
      >
        <i class="fa-solid fa-dna me-2"></i>
        Breed Quality Analytics
      </a>


      <!-- ACCOUNT MANAGEMENT -->
      <% if (user?.role === "farm_manager") { %>
        <a
          href="/farm-manager/user-management/manage"
          class="nav-link <%= current_section === 'user_management' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-user-gear me-2"></i>
          Account Management
        </a>
      <% } %> 

  </nav>
</aside>

<!-- Overlay for small-screen sidebar -->
<div id="overlay" class="overlay d-none"></div>
